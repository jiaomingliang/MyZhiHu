<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </ListView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/submitting_quesiton_button"
        android:src="@drawable/submitting_question_button"
        android:layout_alignBottom="@+id/list_view"
        android:layout_alignRight="@+id/list_view"
        android:layout_alignEnd="@+id/list_view"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp" />

</RelativeLayout>

